<% include ../partials/_header %>

<div class="groupBox">
<h2><%= group.name %></h2>
<h3><%= group.description %></h3>
<h3><%= group %></h3>
</div>
<% for (let i = 0; i < photos.length; i++) { %>

  <% if(i === 0 || moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') !== moment(photos[i-1].createdAt).format('MMMM Do YYYY, h:mm')) { %>
<div class="dateTitle">
    <a href="/groups/<%= group.id %>?date=<%= photos[i].date %>"><h2><%= moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') %></h2></a>
</div>
    <div class="imgSection">

  <% } %>

    <a href="/photos/<%= photos[i].id %>">
    <img class="thumbnail" src="<%= photos[i].imageSRC %>">
    </a>

  <% if(i === photos.length - 1 || moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') !== moment(photos[i+1].createdAt).format('MMMM Do YYYY, h:mm')) { %>
    </div>
  <% } %>

  <% } %>



<form action="/groups/<%= group.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE"/>
  <button class="button button-primary">Delete</button>
</form>
