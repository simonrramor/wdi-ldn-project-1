<% include ../partials/_header %>

<div class="dateTitle">
</div>


<% for (let i = 0; i < photos.length; i++) { %>

  <% if(i === 0 || moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') !== moment(photos[i-1].createdAt).format('MMMM Do YYYY, h:mm')) { %>
    <h3><%= moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') %></h2>
    <div class="imgSection">
  <% } %>

    <a href="/photos/<%= photos[i].id %>">
    <img class="thumbnail" src="<%= photos[i].imageSRC %>">
    </a>

  <% if(i === photos.length - 1 || moment(photos[i].createdAt).format('MMMM Do YYYY, h:mm') !== moment(photos[i+1].createdAt).format('MMMM Do YYYY, h:mm')) { %>
    </div>
  <% } %>

  <% } %>
